<!--

Requires an item with properties, named: modelitem    

-->


<div>

    <hr />

    <div class="form-inline">

        <div class="mr-2">
            <select id="propcbox"
                    name="propcbox"
                    v-model="modelitem.currentProperty"
                    class="form-control form-control-sm">
                <option v-for="item in validProperties(modelitem)" v-bind:value="item">{{item.title}}</option>
            </select>
        </div>

        <div class="mr-2" v-if="modelitem.currentProperty.isBoolType">

        </div>

        <div class="mr-2" v-if="modelitem.currentProperty.isStringType">
            <input class="form-control-sm" v-model="modelitem.currentProperty.currentValue" type="text" />
        </div>

        <div class="mr-2" v-if="modelitem.currentProperty.isNumericType">
            <input class="form-control-sm" v-model="modelitem.currentProperty.currentValue" type="number" />
        </div>

        <div class="mr-2" v-if="modelitem.currentProperty.isListType">
            <div class="form-group">
                <select id="cboxpropvalues"
                        name="cboxpropvalues"
                        v-model="modelitem.currentProperty.currentValue"
                        class="form-control form-control-sm">
                    <option v-for="item in modelitem.currentProperty.validValues" v-bind:value="item.propertyValue">{{item.title}}</option>
                </select>
            </div>
        </div>


        <button class="btn btn-sm btn-secondary mr-2" v-on:click="addProperty(modelitem)" style="margin-left:2px"><span class="fa fa-plus"></span> Add</button>


    </div>

    <hr />

    <table class="table table-sm" style="width:50%">
        <thead>
            <tr>
                <th>Property</th>
                <th>Value</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="property in currentProperties(modelitem)">
                <td>{{property.title}}</td>
                <td>{{property.presentationValue}}</td>
                <td><span v-on:click="deleteProperty(property,modelitem)" class="fa fa-trash" style="cursor:pointer"></span></td>
            </tr>
        </tbody>
    </table>
</div>