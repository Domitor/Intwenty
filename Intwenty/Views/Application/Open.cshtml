@model Intwenty.MetaDataService.Model.ApplicationModel

@{
    ViewData["Title"] = "Edit " + Model.Application.Title + " (" + ViewBag.SystemId + ")";
}

    <div id="app">

        <br />

        <div class="card">
            <div class="card-header"><h2>Edit @Model.Application.Title</h2></div>
            <div class="card-body">
                <ul class="nav">
                    <li class="nav-item">
                        <a asp-action="GetList" asp-controller="Application" asp-route-id="@Model.Application.Id" role="button" class="btn btn-outline-secondary" style="margin:10px"><span class="fa fa-backward" style="font-size:large"></span> Back to list</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-primary" type="button" v-on:click="saveApplication()" style="margin:10px"><span class="fa fa-save" style="font-size:large"></span> Save</button>
                    </li>
                </ul>
            </div>
        </div>

        <br />
        <br />


        @await Html.PartialAsync("_DefaultAppUI", Model)

    </div>

@section Scripts
{

    <script src="~/js/createupdate.js"></script>
    <script>
        Vue.prototype.runMounted = function () {

            var context = this;
            var baseurl = '@Url.Content("~/Application/")';
            var endpointurl = baseurl + "GetLatestVersion/@Model.Application.Id/@ViewBag.SystemId";

            $.get(endpointurl, function (response) {
                context.model = JSON.parse(response.data);
                endpointurl = baseurl + "GetValueDomains/@Model.Application.Id";
                $.get(endpointurl, function (response) {
                    context.valuedomains = JSON.parse(response.data);
                });
            });

        };

        Vue.prototype.runSave = function () {

            var context = this;
            var baseurl = '@Url.Content("~/Application/")';
            var endpointurl = baseurl + "Save";

            this.model.ApplicationId = @Model.Application.Id;

            if (!context.canSave())
                return;

            $.ajax({
                url: endpointurl,
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(this.model),
                success: function (response) {
                    window.location.reload(true);
                }
            });

        };

        var app = createVue('#app',@Model.Application.Id, '@Url.Content("~/Application/")');


    </script>


}