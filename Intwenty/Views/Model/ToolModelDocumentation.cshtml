@model List<Intwenty.Model.ApplicationModel>

@{
    ViewData["Title"] = "Meta model documentation";
}

<style>
    th {
        width: 25%;
    }
</style>



<div>
    <br />
    <br />
    <div class="card">
        <div class="card-header"><h2>@Localizer["METAMODELDOC"]</h2></div>
        <div class="card-body"></div>
    </div>
    <br />
    <br />


    @foreach (var app in Model)
    {
        <div class="card">
            <div class="card-header"><h4>(@app.Application.Id) @app.Application.Title</h4></div>
            <div class="card-body">@app.Application.Description</div>
        </div>

        <br />

        <div style="margin-left:20px">
            <h4>Database tables</h4>

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Table name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@app.Application.DbName</td>
                    </tr>
                    <tr>
                        <td>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th style="width:30%">Column name</th>
                                        <th style="width:10%">Intwenty data type</th>
                                        <th style="width:10%">Sql data type</th>
                                        <th style="width:10%">Mandatory</th>
                                        <th style="width:40%">Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in app.DataStructure.Where(p => p.IsMetaTypeDataColumn && p.IsRoot))
                                    {
                                    <tr>
                                        <td>@data.DbName</td>
                                        <td>@data.DataType</td>
                                        <td>-</td>
                                        <td>@data.Mandatory</td>

                                        @if (data.HasProperty("INTWENTYDEFAULTCOLUMN"))
                                        {
                                            <td>Intwenty system column</td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }


                                    </tr>
                                       }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>

            <h4>UI Inputs</h4>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Component Type</th>
                        <th>Title</th>
                        <th>DB column</th>
                        <th>DB table</th>
                        <th>Domain</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ui in app.UIStructure.Where(p => p.IsMetaTypeCheckBox ||
                                                                 p.IsMetaTypeComboBox ||
                                                                 p.IsMetaTypeDatePicker ||
                                                                 p.IsMetaTypeEditGrid ||
                                                                 p.IsMetaTypeEmailBox ||
                                                                 p.IsMetaTypeLookUp ||
                                                                 p.IsMetaTypePasswordBox ||
                                                                 p.IsMetaTypeTextArea ||
                                                                 p.IsMetaTypeTextBox ||
                                                                 p.IsMetaTypeImageBox).OrderBy(p => p.RowOrder).ThenBy(p => p.ColumnOrder))
                    {
                    <tr>
                        <td>@ui.MetaCode</td>
                        <td>@ui.MetaType</td>
                        <td>@ui.Title</td>

                        @{
                            if (ui.IsDataColumnConnected)
                            {
                                <td> @ui.DataColumnInfo.DbName</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            if (ui.IsDataTableConnected)
                            {
                                <td>@ui.DataTableInfo.DbName</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }

                        <td>@ui.Domain</td>
                    </tr>
                    }
                </tbody>
            </table>


            <h4>UI Listview</h4>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Component Type</th>
                        <th>Title</th>
                        <th>DB column</th>
                        <th>DB table</th>
                        <th>Domain</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ui in app.UIStructure.Where(p => p.IsMetaTypeListView ||
                                                                   p.IsMetaTypeListViewColumn).OrderBy(p => p.RowOrder).ThenBy(p => p.ColumnOrder))
                    {
                    <tr>
                        <td>@ui.MetaCode</td>
                        <td>@ui.MetaType</td>
                        <td>@ui.Title</td>

                        @{
                            if (ui.IsDataColumnConnected)
                            {
                                <td> @ui.DataColumnInfo.DbName</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            if (ui.IsDataTableConnected)
                            {
                                <td> @ui.DataTableInfo.DbName</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }

                        <td>@ui.Domain</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }






</div>