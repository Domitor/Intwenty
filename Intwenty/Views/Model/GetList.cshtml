
@await Html.PartialAsync("_Modals")

<div id="app">
    <div>
        <br />
        <br />

        <div class="card">
            <div class="card-header"><h2>Manage applications</h2></div>
            <div class="card-body">Create and manage application meta data used to describe UI and database</div>
        </div>

        <br />
        <br />

        <a asp-action="Create" asp-controller="Model" role="button" class="btn btn-sm btn-primary"><span class="fa fa-plus"></span> Create New Application</a>

        <br />
        <br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:10%"></th>
                    <th style="width:20%">Title</th>
                    <th style="width:20%">Description</th>
                    <th style="width:12%">DB</th>
                    <th style="width:33%">UI View Design</th>
                    <th style="width:5%"></th>
                </tr>
            </thead>
            <tr v-for="item in datalist">
                <td><a v-bind:href="'/Model/Edit/' + item.id" role="button" class="btn btn-sm btn-secondary">Edit</a></td>
                <td>{{item.title}}</td>
                <td>{{item.description}}</td>
                <td><a v-bind:href="'/Model/EditDB/' + item.id" role="button" class="btn btn-sm btn-secondary"><i class="fas fa-database"></i> Manage DB</a></td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false"><i class="fas fa-align-justify"></i> Open the view designer</button>
                        <div class="dropdown-menu dropdown-menu-lg-right" style="z-index:20000">
                            <a v-bind:href="'/Model/EditUI/' + item.id + '/CRVIEW'" class="dropdown-item" title="Design the Create View">Design the Create View</a>
                            <a v-bind:href="'/Model/EditUI/' + item.id + '/EDVIEW'" class="dropdown-item" title="Design the Edit View">Design the Update View</a>
                            <a v-bind:href="'/Model/EditUI/' + item.id + '/EDLIVIEW'" class="dropdown-item" title="Design the Edit List View">Design the Editlist View</a>
                            <a v-bind:href="'/Model/EditUI/' + item.id + '/DEVIEW'" class="dropdown-item" title="Design the Presentation View">Design the Detail View</a>
                            <a v-bind:href="'/Model/EditUI/' + item.id + '/LIVIEW'" class="dropdown-item" title="Design the Presentation List View">Design the List View</a>
                        </div>
                    </div>

                   
                </td>
                <td><a href="#" role="button" class="btn btn-sm btn-danger" v-on:click="deleteApplication(item)"><i class="fa fa-trash"></i></a></td>
            </tr>
        </table>

    </div>
</div>


@section Scripts
{

    <script>

        var app = new Vue({
            el: '#app',
            data: {
                datalist: []
            },
            methods: {

                getApplications: function () {
                    var context = this;
                    var baseurl = '@Url.Content("~/Model/API/")';
                    var endpointurl = baseurl + "GetApplications";


                    $.get(endpointurl, function (response)
                    {
                        context.datalist = response;
                    });


                },
                deleteApplication: function (item)
                {
                    var context = this;

                    var yesfunc = function ()
                    {

                        var baseurl = '@Url.Content("~/Model/API/")';
                        var endpointurl = baseurl + "DeleteApplicationModel";


                        $.ajax({
                            url: endpointurl,
                            type: "POST",
                            contentType: "application/json",
                            data: JSON.stringify(item),
                            success: function (response) {
                                context.datalist = response;
                            },
                            error: function (response) {
                                raiseErrorModal(response.responseJSON);
                            }
                        });
                    }

                    raiseYesNoModal("Delete the entire application ?", "Warning all configurations including the data model and UI model will be deleted. Continue ?", yesfunc);


                }
            },
            computed: {


            },
            mounted: function ()
            {

                var context = this;
                context.getApplications();

            }
        });
    </script>


}