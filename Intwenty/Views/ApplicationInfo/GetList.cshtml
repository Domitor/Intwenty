

<div id="app">
    <div>
        <br />
        <br />

        <div class="card">
            <div class="card-header"><h2>Manage applications</h2></div>
            <div class="card-body">Create and manage application meta data used to describe UI and database</div>
        </div>

        <br />
        <br />

        <a asp-action="Create" asp-controller="ApplicationInfo" role="button" class="btn btn-primary"><span class="fa fa-plus"></span> Create New Application</a>

        <br />
        <br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:10%"></th>
                    <th style="width:20%">Title</th>
                    <th style="width:25%">Description</th>
                    <th style="width:20%"></th>
                    <th style="width:15%"></th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <tr v-for="item in datalist">
                <td><a v-bind:href="'/ApplicationInfo/Edit/' + item.id" role="button" class="btn btn-secondary">Edit</a></td>
                <td>{{item.title}}</td>
                <td>{{item.description}}</td>
                <td><a v-bind:href="'/ApplicationInfo/EditDB/' + item.id" role="button" class="btn btn-secondary">Manage database</a></td>
                <td><a v-bind:href="'/ApplicationInfo/EditUI/' + item.id" role="button" class="btn btn-secondary">Manage UI</a></td>
                <td><a href="#" role="button" class="btn btn-danger">Delete</a></td>
            </tr>
        </table>

    </div>
</div>


@section Scripts
{

    <script>

        var app = new Vue({
            el: '#app',
            data: {
                datalist: []
            },
            methods: {
               
                getApplications: function () {
                    var context = this;
                    var baseurl = '@Url.Content("~/ApplicationInfo/")';
                    var endpointurl = baseurl + "GetApplications";


                    $.get(endpointurl, function (response)
                    {
                        context.datalist = response;
                    });

                  
                }
            },
            computed: {

               
            },
            mounted: function ()
            {

                var context = this;
                context.getApplications();

            }
        });
    </script>
       

}