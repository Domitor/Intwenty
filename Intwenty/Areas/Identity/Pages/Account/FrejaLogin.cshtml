<div id="app">

    <div class="alert alert-primary" v-if="step==1">
        Input your email below and push login
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>


    <div class="alert alert-primary" v-if="step==2">
        Open the Freja E ID app.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.QRCodeUrl" />
            <div class="form-group" v-if="step==1">
                <label clase="control-label">Email</label>
                <input type="text" v-model="model.email" class="form-control" />
                <button class="btn btn-primary m-2" v-on:click="sendEmail()" :disable="!model.email">@Localizer["Login"]</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {

    <script>

        var app = new Vue({
            el: '#app',
            data:
            {
                model: { email: "", resultCode:"" },
                step: 1,
                errorVerifyEmail: false
            },
            methods: {


                sendEmail: function ()
                {
                    var context = this;
                    var baseurl = '@Url.Content("~/Identity/Account/")';
                    var endpointurl = baseurl + "FrejaLogin?handler=InitiateAuth";
                    var antiforgerytoken = '@AntiForgery.GetAndStoreTokens(HttpContext).RequestToken';

                    context.step = 2;

                    $.ajax({
                        url: endpointurl,
                        type: "POST",
                        contentType: "application/json",
                        data: JSON.stringify(context.model),
                        headers:
                        {
                            RequestVerificationToken: antiforgerytoken
                        },
                        success: function (response)
                        {
                            context.step = 3;
                            context.model = response;
                        },
                        error: function (response)
                        {
                            var x = "";
                        }
                    });
                }

